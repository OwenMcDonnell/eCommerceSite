@model eCommerceSite.Models.MyCartViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Items currently in your cart</h2>
<div>
    @for (int i = 0; i < Model.CartItems.Count; i++)
    {
        <p> <img class="thumbnail" src="@Url.Action("ImageRender", "Home", new { Id = Model.CartItems[i].Id})" alt="" height="150px" /> </p><span> Quantity: @Model.ItemTotals[i]</span>
    }
</div>
<div>
    <h4> Current Cart Total:</h4> <span><b> @Model.CartTotal $</b></span>
    
</div>
