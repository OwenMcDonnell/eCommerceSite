@model IQueryable<eCommerceSite.Data.Item>
@{
    ViewBag.Title = "Index";
}

<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Products</p>

        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-2">
                <img class="thumbnail" src="@Url.Action("ImageRender", "Home", new { Id = item.Id })" alt="" height="150px" />
            </div>
            <div class="col-md-8">
                <div class="thumbnail">
                    <div class="caption-full">
                        <h4 class="pull-right">$@item.Price</h4>
                        <h4>
                            <a href="@Url.Action("Item", "Home", new { Id = item.Id })">@item.Name</a>
                        </h4>
                        <p>@item.Description</p>
                        

                    </div>
                    <div class="ratings">
                        @if (item.OnSale)
                        {
                            <p class="bg-info">On sale!!</p>
                        }

                    </div>
                </div>
            </div>
        </div>
    }
